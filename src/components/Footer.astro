---

import { profileConfig } from "../config";
import { url } from "../utils/url-utils";
const startYear = 2026;
const buildYear = new Date().getFullYear();
---

  
<!--<div class="border-t border-[var(&#45;&#45;primary)] mx-16 border-dashed py-8 max-w-[var(&#45;&#45;page-width)] flex flex-col items-center justify-center px-6">-->
<div class="transition border-t border-black/10 dark:border-white/15 my-10 border-dashed mx-32"></div>
<!--<div class="transition bg-[oklch(92%_0.01_var(&#45;&#45;hue))] dark:bg-black rounded-2xl py-8 mt-4 mb-8 flex flex-col items-center justify-center px-6">-->
<div class="transition border-dashed border-[oklch(85%_0.01_var(--hue))] dark:border-white/15 rounded-2xl mb-12 flex flex-col items-center justify-center px-6">
    <div class="transition text-50 text-sm text-center">
        &copy; <span id="copyright-year">{startYear}{buildYear > startYear ? ` - ${buildYear}` : ''}</span> {profileConfig.name}，
        <a class="transition link text-[var(--primary)] font-medium" target="_blank" href="https://creativecommons.org/licenses/by-nc-sa/4.0/"></a> 
        <br>
        <a class="transition link text-[var(--primary)] font-medium" target="_blank" href={url('rss.xml')}>RSS</a> /
        <a class="transition link text-[var(--primary)] font-medium" target="_blank" href={url('sitemap-index.xml')}></a> /
        <a class="transition link text-[var(--primary)] font-medium" href="/about-privacy/"></a>
        <br>
        
        <a class="transition link text-[var(--primary)] font-medium" target="_blank" href="https://astro.build">Astro</a> 
        <a class="transition link text-[var(--primary)] font-medium" target="_blank" href="https://github.com/saicaca/fuwari"></a> 
        <br>
        本网站代码
        <a class="transition link text-[var(--primary)] font-medium" target="_blank" href="https://github.com/Besty0728/fuwari"></a>
        <br>
        <a class="transition link text-[var(--primary)] font-medium inline-flex items-center" href="https://beian.miit.gov.cn/#/Integrated/index" target="_blank"><img alt="" src="/favicon/foot-icp.png" class="h-4 mr-1"></a>
        <br>
         <a class="transition link text-[var(--primary)] font-medium inline-flex items-center" href="https://beian.mps.gov.cn/#/query/webSearch?code=34010302002608" target="_blank"><img alt="" src="/favicon/foot-ga.png" class="h-4 mr-1"></a>
        <br>
    </div>
</div>

<script is:inline>
    // Astro 静态站点：构建时年份不会自动更新。
    // 这里用浏览器时间在访问时更新年份范围。
    (function () {
        const el = document.getElementById('copyright-year');
        if (!el) return;
        const startYear = 2026;
        const nowYear = new Date().getFullYear();
        el.textContent = nowYear > startYear ? `${startYear} - ${nowYear}` : String(startYear);
    })();
</script>
