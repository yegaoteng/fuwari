---
import type { MarkdownHeading } from "astro";

import Profile from "./Profile.astro";
import Tag from "./Tags.astro";
import VisitorInfo from "./VisitorInfo.astro";
import ReadingProgressCard from "./ReadingProgressCard.svelte";
import UpdatedPosts from "./UpdatedPosts.svelte";
import WidgetLayout from "./WidgetLayout.astro";
import { getSortedPosts } from "../../utils/content-utils";

const allPosts = await getSortedPosts();

// Simplify the posts data for the client component to minimize payload
const simplifiedPosts = allPosts.map(p => ({
    title: p.data.title,
    slug: p.slug,
    published: p.data.published,
    updated: p.data.updated
}));

interface Props {
	class?: string;
	headings?: MarkdownHeading[];
}

const className = Astro.props.class;
---
<div id="sidebar" class:list={[className, "w-full"]}>
    <div class="flex flex-col w-full gap-4 mb-4">
        <Profile></Profile>
    </div>
    <div id="sidebar-sticky" class="transition-all duration-700 flex flex-col w-full gap-4 top-4 sticky top-4">
        
    <Tag class="onload-animation" style="animation-delay: 200ms"></Tag>
    <VisitorInfo class="onload-animation" style="animation-delay: 300ms"></VisitorInfo>
    
    <div class="onload-animation" style="animation-delay: 400ms">
      <WidgetLayout name="二次更新文章" id="updated-posts" isCollapsed={false} class="block bg-[var(--card-bg)] dark:bg-[#1e1e1e]/80">
          <UpdatedPosts client:load posts={simplifiedPosts} />
      </WidgetLayout>
    </div>

    <ReadingProgressCard client:only="svelte" />
    </div>
</div>
